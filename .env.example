#############################################################
# Application Settings
#############################################################
APP_NAME=Production-Ready-RAG-System
ENVIRONMENT=development
DEBUG=True

#############################################################
# PostgreSQL + pgvector Database
#############################################################
# For local development:
DATABASE_URL=postgresql://raguser:ragpass@localhost:5432/ragdb

# For Docker Compose (container-to-container networking):
# DATABASE_URL=postgresql://raguser:ragpass@postgres:5432/ragdb

DB_ECHO=False   # MUST be capitalized so SQLAlchemy doesn't break

#############################################################
# Embedding Model Configuration
#############################################################
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIM=384
EMBEDDING_BATCH_SIZE=16
VECTOR_INDEX_TYPE=hnsw

#############################################################
# LLM Configuration
#############################################################
LLM_ENDPOINT=http://localhost:9000/generate

# OpenAI â€” your provided key (valid format)
OPENAI_API_KEY=OPENAI_API_KEY


LLM_TIMEOUT_SECONDS=30

#############################################################
# RBAC / Authentication
#############################################################
MOCK_AUTH=True
JWT_PUBLIC_KEY_PATH=

#############################################################
# Observability
#############################################################
LOG_LEVEL=INFO
ENABLE_METRICS=True
ENABLE_TRACING=False

#############################################################
# Ingestion Settings
#############################################################
DATA_PATH=./data/mock_tickets.json
CHUNK_SIZE=512
CHUNK_OVERLAP=50

#############################################################
# ORC / ReAct Agent
#############################################################
ORC_MAX_ITERATIONS=6
OPERATOR_TIMEOUT_SECONDS=10
