#############################################################
# Application Settings
#############################################################
APP_NAME=Production-Ready-RAG-System
ENVIRONMENT=development
DEBUG=true

#############################################################
# PostgreSQL + pgvector Database
#############################################################
# For local development:
# DATABASE_URL=postgresql://raguser:ragpass@localhost:5432/ragdb

# For Docker Compose (container-to-container networking):
DATABASE_URL=postgresql://raguser:ragpass@postgres:5432/ragdb

# SQLAlchemy: must be capitalized, otherwise SA treats "true" as invalid
DB_ECHO=false

#############################################################
# Embedding Model Configuration
#############################################################
EMBEDDING_MODEL_NAME=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_DIM=384
EMBEDDING_BATCH_SIZE=16
VECTOR_INDEX_TYPE=hnsw

#############################################################
# LLM Configuration
#############################################################
LLM_ENDPOINT=http://localhost:9000/generate

# OpenAI (your provided key)
OPENAI_API_KEY=OPENAI_API_KEY

LLM_TIMEOUT_SECONDS=30

#############################################################
# RBAC / Authentication
#############################################################
# Enables mock users if no JWT is provided
MOCK_AUTH=true

# Enables real JWT decoding
JWT_SECRET=supersecret123
SIGNING_ALGORITHM=HS256

# Default dev permissions if MOCK_AUTH=true
PERMISSIONS_DEFAULT=ingest:write,query:read

#############################################################
# Observability
#############################################################
LOG_LEVEL=INFO
ENABLE_METRICS=true
ENABLE_TRACING=false

#############################################################
# Ingestion Settings
#############################################################
DATA_PATH=./data/mock_tickets.json
CHUNK_SIZE=512
CHUNK_OVERLAP=50

#############################################################
# ORC / ReAct Agent
#############################################################
ORC_MAX_ITERATIONS=6
OPERATOR_TIMEOUT_SECONDS=10
